@using EnchantElegance.Application.DTOs;
@model EmployeeCreateDTO

<!-- START PAGE CONTENT-->
<div class="page-heading">
	<h1 class="page-title">Employee</h1>
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-controller="Dashboard" asp-action="Index"><i class="la la-home font-20"></i></a>
		</li>
	</ol>
</div>
<div class="page-content fade-in-up">
	<div class="row">
		<div class="col-md-6">
			<div class="ibox">
				<div class="ibox-head">
					<div class="ibox-tools">
						<a class="ibox-collapse"><i class="fa fa-minus"></i></a>
						<a class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
						<div class="dropdown-menu dropdown-menu-right">
							<a class="dropdown-item">option 1</a>
							<a class="dropdown-item">option 2</a>
						</div>
					</div>
				</div>
				<div class="ibox-body">
					<form method="post" enctype="multipart/form-data">
						<div class="row">
							<div class="col-sm-6 form-group">
								<label asp-for="Photo"> Photo</label>
								<input asp-for="Photo" class="form-control" accept="image/*" placeholder="Photo">
								<span class="text-danger" asp-validation-for="Photo"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="Name"> Name</label>
								<input asp-for="Name" class="form-control" placeholder="Name">
								<span class="text-danger" asp-validation-for="Name"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="Profession"> Profession</label>
								<input asp-for="Profession" class="form-control" placeholder="Profession">
								<span class="text-danger" asp-validation-for="Profession"></span>
							</div>
						</div>
						<div class="form-group">
							<button class="btn btn-success" type="submit">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- END PAGE CONTENT-->