@using EnchantElegance.Application.DTOs;
@model ProductCreateDTO
<!-- START PAGE CONTENT-->
<div class="page-heading">
	<h1 class="page-title">Product</h1>
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="index.html"><i class="la la-home font-20"></i></a>
		</li>
		<li class="breadcrumb-item">Create Product</li>
	</ol>
</div>
<div class="page-content fade-in-up">
	<div class="row">
		<div class="col-md-6">
			<div class="ibox">
				<div class="ibox-head">
					<div class="ibox-tools">
						<a class="ibox-collapse"><i class="fa fa-minus"></i></a>
						<a class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
						<div class="dropdown-menu dropdown-menu-right">
							<a class="dropdown-item">option 1</a>
							<a class="dropdown-item">option 2</a>
						</div>
					</div>
				</div>
				<div class="ibox-body">
					<form method="post" enctype="multipart/form-data">
						<div class="row">
							<div class="col-sm-6 form-group">
								<label asp-for="Photo"> Photo</label>
								<input asp-for="Photo" class="form-control" placeholder="Photo">
								<span asp-validation-for="Photo"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="Name"> Name</label>
								<input asp-for="Name" class="form-control" placeholder="Name">
								<span asp-validation-for="Name"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="Description">Description</label>
								<input asp-for="Description" class="form-control" placeholder="Description">
								<span asp-validation-for="Description"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="OldPrice">Old Price</label>
								<input asp-for="OldPrice" class="form-control" placeholder="OldPrice">
								<span asp-validation-for="OldPrice"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="CurrentPrice">Current Price</label>
								<input asp-for="CurrentPrice" class="form-control" placeholder="CurrentPrice">
								<span asp-validation-for="CurrentPrice"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="CategoryId">Category</label>
								@if (Model.CategoryList != null)
								{
									<select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.CategoryList, "Value", "Text"))">
										<option value="">Select Category</option>
									</select>
								}
								else
								{
									<p>Error: CategoryList is null.</p>
								}
								<span asp-validation-for="CategoryId"></span>
							</div>
							<div class="col-sm-6 form-group">
								<label asp-for="ColorId">Color</label>
								<input asp-for="ColorId" class="form-control" placeholder="Color">
								<span asp-validation-for="ColorId"></span>
							</div>

						</div>
						<div class="form-group">
							<button class="btn btn-success" type="submit">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- END PAGE CONTENT-->